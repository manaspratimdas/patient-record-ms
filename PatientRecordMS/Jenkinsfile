pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/manaspratimdas/patient-record-ms.git'
				
            }
        }
        
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }
        
        stage('Unit Test') {
            steps {
                bat 'mvn test'
            }
        }
        
        stage('Integration Test') {
            steps {
                bat 'mvn verify'
            }
        }
        
        
    }
}